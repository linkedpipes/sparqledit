{
    // Use IntelliSense to learn about possible Node.js debug attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch program",
            "program": "${workspaceRoot}/src/run.ts",
            "cwd": "${workspaceRoot}",
            "sourceMaps": true,
            "outFiles": [
                "${workspaceRoot}/bin/**/*.js"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "preLaunchTask": "build"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch program without build",
            "program": "${workspaceRoot}/src/run.ts",
            "cwd": "${workspaceRoot}",
            "sourceMaps": true,
            "outFiles": [
                "${workspaceRoot}/bin/**/*.js"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug mocha tests",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "preLaunchTask": "build",
            "args": [
                "--timeout",
                "999999",
                "${workspaceRoot}/bin/test"
            ],
            "sourceMaps": true,
            "outFiles": [
                "${workspaceRoot}/bin/**/*.js"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Process",
            "port": 5858
        }
    ]
}